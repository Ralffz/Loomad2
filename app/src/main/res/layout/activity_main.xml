<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayish"
    tools:context="com.example.helennagel.loomad.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android on Ã¤ge asi!!"
        android:textSize="24dp"
        android:textColor="@color/aqua"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="5dp" />

    <Button
        android:id="@+id/Pildid"
        android:layout_width="195dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="25dp"
        android:onClick="pildid"
        android:text="Pildid"
        android:textColor="@color/red" />

    <Button
        android:id="@+id/link"
        android:layout_width="195dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/Pildid"
        android:layout_alignBottom="@+id/Pildid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Android link"
        android:textColor="@color/red" />
</RelativeLayout>
